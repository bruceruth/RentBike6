<%= form_tag(bikes_path, :method => "get") do %>
  <%= text_field_tag :search, nil, :placeholder => "Search Bikes by name" %>
  <%= submit_tag "Search" %>
<% end %>
<br><br>


<h1>Listing Bikes</h1>


<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th colspan="3"></th>
    </tr>

  </thead>
  

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.name %></td>
        <td><%= bike.price %></td>
        <td><%= bike.category %></td>
        <td><%= bike.subcategory %></td>
        
        
        <td><%= link_to '  Details  ', bike %></td> 
          <td><%= link_to '  Edit  ', edit_bike_path(bike) %></td> 
          <td><%= link_to '  Destroy  ', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td> 

       <!-- <td><a href="/cart/<%= bike.id %>">  Add To Cart   </a></td> -->

      </tr>
    <% end %>
  </tbody>
</table>

