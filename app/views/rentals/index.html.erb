<p id="notice"><%= notice %></p>

<%= form_tag(rentals_path, :method => "get") do %>
  <%= text_field_tag :search, nil, :placeholder => "Searh by Date" %>
  <%= submit_tag "Search" %>
<% end %><br><br>

<h1>Listing Rentals</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Rentalduration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.date %></td>
        <td><%= rental.biketype %></td>
        <td><%= rental.rentalDuration %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

