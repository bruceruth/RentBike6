<!DOCTYPE html>
<html>
  

<head>
  <title>BikeApp1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav id="nav">
  <div id="page_nav">  
    <%= link_to "Home", root_path %> 
    <%= link_to 'New Rental', new_rental_path %>
    <%= link_to "Contact", page_contact_path %>
    <! -- LIMIT THE VIEW OF THESE LINKS FOR THE ADMIN ONLY -->
    <%= link_to "View Rentals",rentals_path %>
    <%= link_to "View Bikes", bikes_path %>


    
</div>

<div id=sign_in>
  <% if user_signed_in? %> 

      <%= link_to "View Your Cart", cart_path %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path %>  
      <%= link_to "Sign Up", new_user_registration_path %>

    <% end %>
</div>
 
 </nav>

<div id="main_wrap">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</div>

</body>
</html>
